#! /bin/sh

# check in y2image to /work/src/done/STABLE
# call from the y2image directory

ver=`cat VERSION`
y2image=/tmp/y2image-$ver

if [ "$ver" = "" ] ; then
  echo "no version info?"
  exit 1
fi

echo "going to check in y2image version $ver..."

make clean
rm -rf $y2image
mkdir $y2image
tar -cf - * | tar -C $y2image -xf -
cd $y2image
find . -depth -name CVS -exec rm -r {} \;
rm -rf bin/ci_* MAINTAINER cache data/boot/linux.loopc
cd /tmp

tar -Icf $y2image.tar.bz2 y2image-$ver

if [ "$1" = test ] ; then
  echo "y2image directory tree: $y2image"
  exit
fi

if mkdir /work/src/done/STABLE/y2image ; then
  cd /work/src/done/STABLE/y2image
  cp $y2image.tar.bz2 /work/SRC/all/y2image/y2image.{changes,spec} .
  [ -f /work/SRC/all/y2image/config-dist.sh ] && cp /work/SRC/all/y2image/config-dist.sh .
  perl -pi -e 's/^(Version:\s+)\S+/${1}'$ver'/' /work/src/done/STABLE/y2image/y2image.spec
  perl -pi -e 's/^(Source.+?-)\S+?(\.tar\.bz2)/${1}'$ver'${2}/' /work/src/done/STABLE/y2image/y2image.spec
  . /work/src/bin/.profile
  vc y2image
  rm /work/src/done/STABLE/y2image/*~
  echo "ok"
else
  echo oops
  exit 1
fi
