#! /bin/sh

# check in bootdise to /work/src/done/STABLE
# call from the y2image directory

# filelist:		disk_eide.file_list
# kernel:		k_eide
# linuxrc:		linuxrc_mini
# syslinux config:	syslinux.cfg

ver=`cat VERSION`
bootdise=/tmp/bootdise-$ver

if [ "$ver" = "" ] ; then
  echo "no version info?"
  exit 1
fi

echo "going to check in bootdise version $ver..."

make clean
rm -rf $bootdise
mkdir $bootdise
tar -cf - * | tar -C $bootdise -xf -
cd $bootdise
find . -depth -name CVS -exec rm -r {} \;
rm -f bin/ci_* MAINTAINER
rm -rf data/{demo,yast2}
mv data/initrd/disk_eide.file_list data/initrd/initrd.file_list
rm -f data/initrd/disk_*.file_list
perl -pi -e 's:/usr/sbin/linuxrc:/usr/sbin/linuxrc_mini:g' etc/config 
perl -pi -e 's/k_deflt/k_eide/g' etc/config
cd /tmp

if [ "$1" = test ] ; then
  echo "bootdise directory tree: $bootdise"
  exit
fi

tar -zcf $bootdise.tar.gz bootdise-$ver

if mkdir /work/src/done/STABLE/bootdise ; then
  cd /work/src/done/STABLE/bootdise
  cp $bootdise.tar.gz /work/SRC/arch/i386/bootdise/bootdise.{changes,spec} .
  perl -pi -e 's/^(Version:\s+)\S+/${1}'$ver'/' /work/src/done/STABLE/bootdise/bootdise.spec
  perl -pi -e 's/^(Source.+?-)\S+?(\.tar\.gz)/${1}'$ver'${2}/' /work/src/done/STABLE/bootdise/bootdise.spec
  . /work/src/bin/.profile
  vc bootdise
  rm /work/src/done/STABLE/bootdise/*~
  echo "ok"
else
  echo oops
  exit 1
fi
