#! /bin/sh

# check in bootdisl to /work/src/done/STABLE
# call from the y2image directory

# filelist:		disk_laptop.file_list
# kernel:		k_laptop
# linuxrc:		linuxrc_mini
# syslinux config:	syslinux.cfg

ver=`cat VERSION`
bootdisl=/tmp/bootdisl-$ver

if [ "$ver" = "" ] ; then
  echo "no version info?"
  exit 1
fi

echo "going to check in bootdisl version $ver..."

make clean
rm -rf $bootdisl
mkdir $bootdisl
tar -cf - * | tar -C $bootdisl -xf -
cd $bootdisl
find . -depth -name CVS -exec rm -r {} \;
rm -f bin/ci_* MAINTAINER
rm -rf data/{demo,yast2}
mv data/initrd/disk_laptop.file_list data/initrd/initrd.file_list
rm -f data/initrd/disk_*.file_list
perl -pi -e 's:/usr/sbin/linuxrc:/usr/sbin/linuxrc_mini:g' etc/config 
perl -pi -e 's/k_deflt/k_laptop/g' etc/config
cd /tmp

if [ "$1" = test ] ; then
  echo "bootdisl directory tree: $bootdisl"
  exit
fi

tar -zcf $bootdisl.tar.gz bootdisl-$ver

if mkdir /work/src/done/STABLE/bootdisl ; then
  cd /work/src/done/STABLE/bootdisl
  cp $bootdisl.tar.gz /work/SRC/arch/i386/bootdisl/bootdisl.{changes,spec} .
  perl -pi -e 's/^(Version:\s+)\S+/${1}'$ver'/' /work/src/done/STABLE/bootdisl/bootdisl.spec
  perl -pi -e 's/^(Source.+?-)\S+?(\.tar\.gz)/${1}'$ver'${2}/' /work/src/done/STABLE/bootdisl/bootdisl.spec
  . /work/src/bin/.profile
  vc bootdisl
  rm /work/src/done/STABLE/bootdisl/*~
  echo "ok"
else
  echo oops
  exit 1
fi
