#! /usr/bin/perl

# test program for boot disk images

BEGIN { unshift @INC, ( $0 =~ /(.*?)((?<![^\/])bin\/)?[^\/]+$/ )[0] . "lib" }
use ReadConfig;

use Getopt::Long;
use MakeFATImage2;

$opt_file = undef;
$opt_disks = undef;

Getopt::Long::Configure("bundling");

GetOptions(
  'out|o=s' => \$opt_file,
  'disks|n=i' => \$opt_disks
);

if($opt_disks < 2) {
  die "use -n option\n";
}

MakeFATImage2($opt_file, $opt_disks, 1);

