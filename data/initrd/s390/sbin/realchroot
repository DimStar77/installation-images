echo "realchroot exits the initrd and boots into an other root fs."
echo "Please enter the Major and Minor Device you want to boot into in decimal."
echo "Major(almost likely 94):"
read major
echo "Minor(dasda1 is 1, dasdb1 is 5, dasdc1 is 9 and so on:"
read minor
echo $major $minor > /new-real-root-dev
echo "Shutdown instsys and change to the new root(y/*)?"
read a
if [ "$a" = y ]
then
	halt
fi
