x syslinux.cfg /isolinux.cfg

<kernel_rpm>:
  a /boot/<kernel_img> /linux

if theme eq 'Zen'
  x message-zen /message
  x syslinux-zen.cfg /isolinux.cfg
endif

memtest86+:
  m /boot/memtest.bin /memtest

syslinux:
  m /usr/share/syslinux/isolinux.bin /
  e isolinux-config --base=/boot/<arch>/loader isolinux.bin

