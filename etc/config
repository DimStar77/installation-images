; kernel rpm name
; use 'kernel' to override
;
[KernelRPM]
default	= kernel-default
s390    = kernel-s390


; extra kmps we need (',' separated list)
[KMP]
default	=
i386	= virtualbox-guest,xen
x86_64	= virtualbox-guest,xen


; extra firmware packages
[Firmware]
default = kernel-firmware,adaptec-firmware
